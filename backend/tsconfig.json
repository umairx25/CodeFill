{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "extension", "extension/script.js", "src/app.ts", "backend/index.ts", "src/format.ts", "extension"],
  "exclude": ["node_modules"]
}
